#:kivy 1.11
#---------------------------------------------------------
# widget
#---------------------------------------------------------
<ChangeView>:
	orientation: 'vertical'
	size_hint: 1, None
	spacing: dp(8)
	height: label.height + box.height + self.spacing

	canvas:
		Color:
			rgb: (0.5, 0.5, 0.5, 1)
        Line:
            points: self.x, self.y, self.x + self.width, self.y 
            width: dp(.8)
            joint: 'miter'

	Label:
		id: label
		text: 'Label'
		size_hint: None, None
		halign: 'left'
		valign: 'top'
		bold: True
		# Adapt size to text
		text_size: root.width/2 - dp(5), None
		size: self.texture_size    

	BoxLayout:
		id: box
		orientation: 'horizontal'
		size_hint: 1, None
		spacing: (dp(5), dp(5))
		height: max(new.height, old.height)
		Label:
			id: new
			halign: 'left'
			valign: 'top'
			markup: True
			text_size: root.width/2 - dp(5), None
			size: self.texture_size

		Label:
			id: old
			halign: 'left'
			valign: 'top'
			markup: True
			text_size: root.width/2 - dp(5), None
			size: self.texture_size
	