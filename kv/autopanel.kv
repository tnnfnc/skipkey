#:kivy 1.11
# ------------------------ AUTO PANEL
<AutoPanel>:
	# Kivy Properties
	length: _inp_length
	letters: _swi_letters
	symbols: _inp_symbols
	numbers: _inp_numbers
	password: _inp_password
	strenght: _wid_strenght
	
    orientation: 'vertical'
    padding: ui.box_padding
 #---------------- Password length
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 4 * ui.button_y

        BoxLayout:
            orientation: 'horizontal'
            FieldLabel:
                id: _pwdlength
                text: _('Length')
                size_hint_x: None
                width: ui.field_x
            InputField:
                id: _inp_length
                # hint_text: _('password length')
                size_hint_x: None
                width: ui.field_small_x 
                on_text:
                    if not self.text.isdigit(): self.text = self.text[:-1]
                on_parent:
                    self.focus = True
        BoxLayout:
            orientation: 'horizontal'
            FieldLabel:
                id: _lab_letters
                text: _('Letters')
                size_hint_x: None
                width: ui.field_x                
            Switch:
                id: _swi_letters
                size_hint: None, 1
                height: ui.button_y #button_size_y
                active: len(_inp_length.text) > 0
        # Numbers
        BoxLayout:
            orientation: 'horizontal'
            FieldLabel:
                id: _lab_numbers
                text: _('Numbers')
                size_hint_x: None
                width: ui.field_x                
            Switch:
                id: _swi_numbers
                size_hint: None, 1
                height: ui.button_y #button_size_y
                on_active: 
                    if self.active and _inp_length.text: _inp_numbers.text = '{0:.0f}'.format(int(_inp_length.text)*0.11)
                    else: _inp_numbers.text = ''
            FieldLabel:
                id: _lab_minnumbers
                text: _('At least')
                size_hint_x: None
                width: ui.field_small_x    
            InputField:
                id: _inp_numbers
                hint_text: _('a number')
                disabled: not _swi_numbers.active
                size_hint_x: None
                size: (ui.field_x, ui.field_y) #field_size_small
                on_text:
                    if not self.text.isdigit(): self.text = self.text[:-1]
        # Symbols
        BoxLayout:
            orientation: 'horizontal'
            FieldLabel:
                id: _lab_symbols
                text: _('Symbols')
                size_hint_x: None
                width: ui.field_x                
            Switch:
                id: _swi_symbols
                size_hint: None, 1
                height: ui.button_y #button_size_y
                on_active:
                    if self.active and _inp_length.text: _inp_symbols.text = '{0:.0f}'.format(int(_inp_length.text)*0.30)
                    else: _inp_symbols.text = ''
            FieldLabel:
                id: _lab_minsymbols
                text: _('At least')
                size_hint_x: None
                width: ui.field_small_x                
            InputField:
                id: _inp_symbols
                hint_text: _('a number')
                disabled: not _swi_symbols.active
                size_hint_x: None
                size: (ui.field_x, ui.field_y) #field_size_small
                on_text:
                    if not self.text.isdigit(): self.text = self.text[:-1]

    #----------- Generate password
    BoxLayout:
		id: _bx_generate
        orientation: 'horizontal'
        size_hint_y: None
        height: _inp_password.height
        SmallButton:
            id: _btn_generate
			# pos_hint: {'center_y': 0.5}
            text: _('Generate')
            on_release:
                if hasattr(root, 'cmd_generate'): getattr(root, 'cmd_generate')()
        OutputField:
            id: _inp_password
			size_hint_x: 1
            hint_text: _('Password hint')
            on_text: 
                if hasattr(root, 'cmd_text'): getattr(root, 'cmd_text')(self.text)            
    PasswordStrenght:
        id: _wid_strenght
		width: _bx_generate.width
        