#---------------------------------------------------------
# Changes screen
#---------------------------------------------------------
<ChangesScreen>:
	# Properties
    # pr_accounts: _spi_accounts
    pr_actions: _spi_actions
    pr_comparator_wid: _wid_comparator

    
    BoxLayout:
        orientation: 'vertical'
        padding: screen_padding
		#--------------------------------- Main buttons
		ActionBar:
		    # pos_hint: {'top':1}
			ActionView:
				use_separator: True
				ActionPrevious:
					title: app.pr_timer
					with_previous: False
					app_icon: 'data/icons/skip.png'
					previous_icon: 'data/icons/left_arrow.png'
					on_release:
						if hasattr(root, 'cmd_back'): getattr(root, 'cmd_back')(app)
				# TimerLabel:
				ActionButton:
					important: True
					text: _('Back')
					icon: 'data/icons/left_arrow.png'
					on_release: 
						if hasattr(root, 'cmd_back'): getattr(root, 'cmd_back')(app)
				ActionButton:
					important: True
					icon: 'data/icons/undo.png'
					text: _('Undo')
					on_release: 
						if hasattr(root, 'cmd_undo'): getattr(root, 'cmd_undo')(args)
				ActionOverflow:				

		FrameTitle:
            id: _lab_account
            text: _('Changes')
		Spinner:
			id: _spi_actions
			size_hint: 1, None
			size: spinner_size
			on_text:
				if hasattr(root, 'cmd_actions'): getattr(root, 'cmd_actions')(self.text)
				
		BBoxLayout: # WORKS!
			orientation: 'vertical'		
			ItemFields:
				id: _wid_comparator
				# height: dp(800)		
					