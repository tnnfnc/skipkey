#:kivy 1.11
# ---------------------------------------------------------------------
# ----------------------- Panels ---------------------
# ---------------------------------------------------------------------
# ------------------------ Login PANEL
<LoginPanel>:
    # Properties
    password: _inp_password
    strenght: _wid_strenght
	
    orientation: 'vertical'
    size_hint_y: None
    height: 3 * ui.nav_button_y
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: ui.nav_button_y
        FieldLabel:
            id: _lab_pwddisp
            text: _('Display password')
        Switch:
            id: _swi_pwddisp
            active: False
    InputField:
        id: _inp_password
        hint_text: _('type your password')
        password: not _swi_pwddisp.active
        on_text: 
            if hasattr(root, 'cmd_text'): getattr(root, 'cmd_text')(self.text)
		on_parent:
			self.focus = True
    PasswordStrenght:
        id: _wid_strenght
		width: _inp_password.width
        