#:kivy 1.11
##-------------------------- POPUP
#---------------------------------------------------------
# Password Popup
#---------------------------------------------------------
<PasswordPopup>:
    passwordpanel: _passwordpanel

	auto_dismiss: False
	ScrollView:
		BoxLayout:
			orientation: "vertical"
			# size_hint_y: None
			size_hint_min_y: _passwordpanel.height + _btn_file.height
            # --------------------Edit screen > Password preferences tabbed panel
            PasswordPanel:
                id: _passwordpanel
                # size_hint_y: None

			#--------------------------------- Main buttons
			StackLayout:
				orientation: 'rl-bt'
				size_hint_y: None
				height: 2*ui.nav_button_y
				NavButton:
					id: _btn_file
					text: _('Save')
					on_release: 
						if hasattr(root, 'cmd_save'): getattr(root, 'cmd_save')()
				NavButton:
					id: _btn_exit
					text: _('Cancel')
					on_release:
						if hasattr(root, 'cmd_cancel'): getattr(root, 'cmd_cancel')()