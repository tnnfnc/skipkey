#:kivy 1.11
#-------------------- PASSWORD STRENGHT               
<PasswordStrenght>:
    ## Properties
    pr_strenght: _prb_strenght
    
    orientation: 'horizontal'
    size_hint_y: None
    height: 1.5 * ui.field_y
	spacing: dp(4), dp(4)
	canvas:
		Color:
			rgb: ui.table_color
		Line:
			rectangle: self.x + 2, self.y, self.width - 2, self.height
			width: 1.0
			joint: 'bevel'
		
    FieldLabel:
        id: _lab_strenght
        markup: True
        bold: True
        text: _('Strenght') + ' 0.0%'
        padding_x: dp(4)
    ProgressBar:
        id: _prb_strenght
        max: 100
        value: 0
        # on_value:
        #     _lab_strenght.text = _('Strenght') + ' {:.2%}'.format(self.value/100)
            # _inp_strenght.text = '{:.2%}'.format(self.value/100)

