#:kivy 1.11
#-------------------- PASSWORD STRENGHT               
<PasswordStrenght>:
    ## Properties
    pr_strenght: _prb_strenght
    
    orientation: 'horizontal'
    size_hint: None, None
    height: 1.2 * ui.field_y #field_height
	padding: ui.box_padding
	canvas:
		Color:
			rgb: ui.table_color
		Line:
			rectangle: self.x, self.y, self.width, self.height
			width: 1.0
			joint: 'bevel'
		
    FieldLabel:
        id: _lab_strenght
        text: _('Strenght')
    OutputField:
        id: _inp_strenght
        text: '0.0%'
        size_hint_x: None
		width: 2.2 * ui.field_y #label_height
    ProgressBar:
        id: _prb_strenght
        max: 100
        value: 0
        on_value:
            _inp_strenght.text = '{:.2%}'.format(self.value/100)

