#:kivy 1.11
#-------------------------- SEED PANEL              
<SeedPanel>:
    # Properties
    pr_strenght: _wid_strenght
    pr_seed: _inp_seed

	orientation: 'vertical'
	BoxLayout:
		orientation: 'horizontal'
		FieldLabel:
			id: _lab_seed
			size_hint_y: 1
			text: _('Display seed')
		Switch:
			id: _swi_seed
			size_hint_x: None
			active: False
    InputField:
        id: _inp_seed
        hint_text: _('input your seed')
        password: not _swi_seed.active
        on_text: 
            if hasattr(root, 'cmd_text'): getattr(root, 'cmd_text')(self.text)
    PasswordStrenght:
        id: _wid_strenght
		width: _inp_seed.width