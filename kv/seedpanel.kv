#:kivy 1.11
#-------------------------- SEED PANEL              
<SeedPanel>:
    # Properties
    strenght: _wid_strenght
    seed: _inp_seed

	orientation: 'vertical'
    size_hint_y: None
    height: 3 * ui.nav_button_y
	BoxLayout:
		orientation: 'horizontal'
        size_hint_y: None
        height: ui.nav_button_y
		FieldLabel:
			id: _lab_seed
			text: _('Display seed')
		Switch:
			id: _swi_seed
			active: False
    InputField:
        id: _inp_seed
        hint_text: _('input your seed')
        password: not _swi_seed.active
        on_text: 
            if hasattr(root, 'cmd_text'): getattr(root, 'cmd_text')(self.text)
    PasswordStrenght:
        id: _wid_strenght
		width: _inp_seed.width