#:kivy 1.11
#---------------------------------------------------------
# EDIT screen
#---------------------------------------------------------
<EditScreen>:
	# Kivy Properties
    aname: _inp_name
	url: _inp_url
	login: _inp_login
	email: _inp_mail
	description: _inp_description
	tag: _spi_tag
	color: _spi_colors
	created: _out_date
	changed: _out_cdate
	# passwordpanel: _passwordpanel
	secret_0: _secret_0
	secret_1: _secret_1
	secret_2: _secret_2

	BoxLayout:
		orientation: 'vertical'
		#--------------------------------- Main buttons
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: self.minimum_height
			IconButton:
				icon: 'data/icons/reload.png'
				on_release:
					if hasattr(app, 'timeout'): getattr(app, 'timeout')()
			OptionLabel:
				text: app.timer
				halign: 'left'
			# horizontal spacing
			BoxLayout:
				orientation: 'horizontal'
			IconButton:
				icon: 'data/icons/left_arrow.png'
				on_release: 
					if hasattr(root, 'cmd_back'): getattr(root, 'cmd_back')()
			IconButton:
				icon: 'data/icons/save.png'
				on_release: 
					if hasattr(root, 'cmd_save'): getattr(root, 'cmd_save')()
			IconButton:
				icon: 'data/icons/trash.png'
				on_release:
					if hasattr(root, 'cmd_delete'): getattr(root, 'cmd_delete')()

		#---------------------------------								
		FrameTitle:
            id: _lab_account
            text: _('Edit account')
			size_hint_y: None
			height: self.size_hint_min_y
		#--------------------------------- Scroll section
		ScrollView:
			id: _scr_edit
			BoxLayout:
				orientation: 'vertical'
				size_hint_y: None
				# height: ui.page_h
				height: self.minimum_height
				padding: ui.box_padding
				#---------------------------- Fields
				GridLayout:
					cols: 2
					size_hint_y: None
					height: self.minimum_height
					FieldLabel:
						id: _lab_name
						text: _('Name')
					InputField:
						id: _inp_name
						hint_text: _('name')
						on_parent:
							self.focus = True
					FieldLabel:
						id: _lab_web
						text: _('Web site')
					InputField:
						id: _inp_url
						hint_text: _('web site url')
					FieldLabel:
						id: _lab_login
						text: _('Login user')
					InputField:
						id: _inp_login
						hint_text: _('login user')
					FieldLabel:
						id: _lab_mail
						text: _('e-mail')
					InputField:
						id: _inp_mail
						hint_text: _('e-mail')
					# ------------------------ Free Text
					FieldLabel:
						id: _lab_description
						size_hint_y: 1
						text: _('Free text')
					InputField:
						id: _inp_description
						hint_text: _('Free text')
						multiline: True
						size: (ui.field_bigger_x, 3 * ui.field_y)#field_size_long[0], field_height*3
			# ------------------------------- Edit screen > Security
					FieldLabel:
						id: _lab_date
						text: _('Created')
					OutputField:
						id: _out_date
					# Changed on
					FieldLabel:
						id: _lab_cdate
						text: _('Changed')
					OutputField:
						id: _out_cdate
				# ------------------------------- Edit screen > Tags and colours
				FieldLabel:
					# id: _lab_cdate
					text: _('Colors')
					size_hint: 1, None
					size: ui.field_size
					halign: 'center'
				TagSpinner:
					id: _spi_colors
					size_hint: 1, None
					size: (ui.spinner_x, ui.spinner_y) #spinner_size
					text: _('Colors')
					values: _('White'), _('Red'), _('Green'), _('Blue'), _('Yellow')
					on_text:
						if hasattr(app, 'cmd_text_colors'): getattr(app, 'cmd_text_colors')(item, args)
				FieldLabel:
					# id: _lab_cdate
					text: _('Tag')
					size_hint: 1, None
					size: ui.field_size
					halign: 'center'	
				BoxLayout:
					orientation: 'horizontal'
					size_hint_y: None
					height: ui.spinner_y
					TagSpinner:
						id: _spi_tag
						# pos_hint: {'center_y': 0.5}
						size_hint: 1, None
						size: (ui.spinner_x, ui.spinner_y)
						on_text:
							if hasattr(root, 'cmd_selectiontag'): getattr(root, 'cmd_selectiontag')(self)
					ImageButton:
						id: _btn_rename
						icon: 'data/icons/replace.png'
						size_hint: None, None
						size: _spi_tag.height, _spi_tag.height
						# text: _('Rename')
						on_release:
							if hasattr(root, 'cmd_renametag'): getattr(root, 'cmd_renametag')(self, _spi_tag)
					ImageButton:
						id: _btn_add
						icon: 'data/icons/plus.png'
						size_hint: None, None
						size: _spi_tag.height, _spi_tag.height							
						# text: _('Add')
						on_release: 
							if hasattr(root, 'cmd_addtag'): getattr(root, 'cmd_addtag')(self, _spi_tag)
					ImageButton:
						id: _btn_delete
						icon: 'data/icons/trash.png'
						size_hint: None, None
						size: _spi_tag.height, _spi_tag.height							
						# text: _('Delete')
						on_release:
							if hasattr(root, 'cmd_deletetag'): getattr(root, 'cmd_deletetag')(self, _spi_tag)
				# --------------------Edit screen > Password preferences tabbed panel
				FieldLabel:
					# id: _lab_cdate
					text: _('Password')
					size_hint: 1, None
					size: ui.field_size
					halign: 'center'			
				Password:
					id: _secret_0
					size_hint_y: None
					height: ui.spinner_y
					
				Password:
					id: _secret_1
					size_hint_y: None
					height: ui.spinner_y

				Password:
					id: _secret_2
					size_hint_y: None
					height: ui.spinner_y
					
				# --------------------Edit screen > Password preferences tabbed panel
				# PasswordPanel:
				# 	id: _passwordpanel



						