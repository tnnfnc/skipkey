#---------------------------------------------------------
#-------------------- DECISION POPUP
#---------------------------------------------------------
<DecisionPopup>:
	## Properties
    pr_message: _lab_message
	
    auto_dismiss: False
    size_hint: 0.9, 0.5
    # size: page_width-dp(20), page_height/4

    # pos: root.pos
    orientation: "vertical"
    padding: ui.screen_padding
    BoxLayout:
        orientation: 'vertical'
		Label:
            id: _lab_message
            markup: True
            font_size: ui.font_big #1.1*font_size
            text: _('Message')
		BoxLayout:
        GridLayout:
            cols: 2
			NavButton:
				id: _btn_ok
				pos_hint: {'x': 0.7}
				text: _('OK')
				on_release:
					if hasattr(root, 'cmd_ok'): getattr(root, 'cmd_ok')()
					root.dismiss()
			NavButton:
				id: _btn_cancel
				pos_hint: {'x': 0.7}
				text: _('Cancel')
				on_release:
					if hasattr(root, 'cmd_cancel'): getattr(root, 'cmd_cancel')()
					root.dismiss()