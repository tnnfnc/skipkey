#:kivy 1.11
#----------------- Password control
<Password>:
    cols: 1
    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: password
            text: _('Create Password')
            # size_hint: None, None
            # size: ui.spinner_size
            on_release:
                if hasattr(root, 'cmd_change_pwd'): getattr(root, 'cmd_change_pwd')()
        # ImageButton:
        #     id: _btn_pwdchange
        #     icon: 'data/icons/pen.png'
        #     size_hint: None, None
        #     size: root.height, root.height							
        #     on_release:
        #         if hasattr(root, 'cmd_change_pwd'): getattr(root, 'cmd_change_pwd')()
        ImageButton:
            id: _btn_pwdchange
            icon: 'data/icons/trash.png'
            size_hint: None, None
            size: root.height, root.height
            on_release:
                if hasattr(root, 'cmd_delete_pwd'): getattr(root, 'cmd_delete_pwd')()