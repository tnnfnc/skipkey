# ---------------------------------------------------------------------
# ----------------------- COMMONS DYNAMIC CLASSES ---------------------
# ---------------------------------------------------------------------
<VerticalSpace@BoxLayout>:
	orientation: 'vertical'
	size_hint_y: None
	height: dp(4)
<NavButton@Button>:
    # id: _bt
    text: 'Button' 
    size_hint: None, None
	size: nav_button_size

## --------------------	
<FrameTitle@Label>:
    # id: _ft
    text: 'Frame title'
    bold: True
    padding: dp(4), dp(8)
    size_hint_y: None
    font_size: title_font_size
    height: self.texture_size[1] # Adapt the height to the text
    text_size: self.width, None  # Allow text for the wole width
## --------------------	
<BoxFrame@BoxLayout>:
    orientation: 'vertical'
    padding: screen_padding
    canvas:
        Color:
            rgb: frame_color
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1.2
            joint: 'bevel'
## --------------------
<FieldLabel@Label>:
    # id: _lb
    text: 'Label text'
    halign: 'left'
    valign: 'center'
	pos_hint: {'center_y': 0.5}
    size_hint: None, None
    font_size: font_size
    # width: self.texture_size[0]
    size: self.texture_size[0], label_height # Adapt the size to the text
    #padding: font_size/4, font_size/4
## --------------------
<InputField@TextInput+FocusBehavior>:
    # id: _in
    multiline: False
    valign: 'center'
    hint_text: 'Input field'
	pos_hint: {'center_y': 0.5}
    size_hint: None, None
	size: field_size_long
    font_size: font_size
    # texture_size: self.size
    # size: self.texture_size
## --------------------	
<OutputField@TextInput>:
	multiline: False
    valign: 'center'
    hint_text: 'Output field'
	pos_hint: {'center_y': 0.5}
	size_hint: None, None
	size: field_size_long
	disabled: True
	# size_hint_y: None
    # height: field_height
    # font_size: font_size
    # texture_size: self.size
## --------------------           
<SmallButton@Button>:
    # The small button fits the label size
    text: 'Small Button' 
    size_hint: None, None
    size: small_button_size
## -------------------- TABLE FRAME 
<TableFrame@BoxLayout>:
    orientation: 'vertical'
    padding: screen_padding
    canvas:
        Color:
            rgb: table_color
        Line:
            points: self.x, self.y, self.x+self.width,self.y
            width: dp(0.5)
            joint: 'miter'
# <TimerBar@ActionItem+ProgressBar>
	# max: 1000
	# value: 75
## -------------------- Count down
<TimerLabel@ActionItem+Label>
	text: app.pr_timer
	canvas:
		Color:
			rgb: frame_color
		Line:
			rectangle: self.x, self.y, self.width, self.height
			width: dp(0.5)
			joint: 'bevel'

<BBoxLayout@BoxLayout>:
	#--------------------- BackGround
	canvas.before:
		Color:
			rgb: .6, .6, .6
		Rectangle:
			size: self.size
			source: 'data/background.png'
<BPopup@Popup>:
	#--------------------- BackGround
	canvas.before:
		Color:
			rgb: .6, .6, .6
		Rectangle:
			size: self.size
			source: 'data/background.png'