#:kivy 1.11
# ---------------------------------------------------------------------
# ----------------------- COMMONS DYNAMIC CLASSES ---------------------
# ---------------------------------------------------------------------
<VerticalSpace@BoxLayout>:
	orientation: 'vertical'
	size_hint_y: None
	height: dp(4)
<NavButton@FocusBehavior+Button>:
    # id: _bt
    text: 'Button' 
    size_hint: None, None
	size: ui.nav_button_x, ui.nav_button_y
## --------------------	
<BoxFrame@BoxLayout>:
    orientation: 'vertical'
    spacing: ui.box_spacing
    padding: dp(4), dp(4)
    canvas:
        Color:
            rgb: ui.frame_color
        Line:
            rectangle: self.x + 2, self.y + 2, self.width - 2, self.height - 2
            width: 1.2
            joint: 'bevel'
## --------------------
<FieldLabel@Label>:
    # id: _lb
    text: 'Label text'
    halign: 'left'
    valign: 'middle'
    font_size: ui.font_norm #font_size
    text_size: self.size
    size_hint_min_x: dp(80)
    # size: self.texture_size[0], label_height # Adapt the size to the text
## --------------------	
<FrameTitle@FieldLabel>:
    text: 'Frame title'
    bold: True
    halign: 'center'
    padding: dp(4), dp(4)
    font_size: ui.font_big #title_font_size
    size_hint_min_y: ui.frame_title_y + self.padding[1]
## --------------------
<InputField@TextInput+FocusBehavior>:
    # id: _in
    multiline: False
    valign: 'center'
    hint_text: ''
	pos_hint: {'center_y': 0.5}
    size_hint: 1, None
	size: (ui.field_bigger_x, ui.field_y) #field_size_long
    font_size: ui.font_norm
## --------------------	
<OutputField@TextInput>:
	multiline: False
    valign: 'center'
    hint_text: 'Output field'
	pos_hint: {'center_y': 0.5}
	size_hint: 1, None
	size: (ui.field_bigger_x, ui.field_y) #field_size_long
	disabled: True
## --------------------           
<SmallButton@FocusBehavior+Button>:
    # The small button fits the label size
    text: 'Small Button' 
    size_hint: None, None
    size: (ui.button_x, ui.button_y) # small_button_size
## -------------------- TABLE FRAME 
<TableFrame@BoxLayout>:
    orientation: 'vertical'
    padding: ui.screen_padding
    canvas:
        Color:
            rgb: ui.table_color
        Line:
            points: self.x, self.y, self.x+self.width,self.y
            width: dp(0.5)
            joint: 'miter'
<BBoxLayout@BoxLayout>:
	#--------------------- BackGround
	canvas.before:
		Color:
			rgb: .6, .6, .6
		Rectangle:
			size: self.size
			source: 'data/background.png'
<BPopup@Popup>:
#--------------------- BackGround
	canvas.before:
		Color:
			rgb: .6, .6, .6
		Rectangle:
			size: self.size
			source: 'data/background.png'
#--------------------- Button with an icon   
<ImageButton@Button>:
    icon: ''
    canvas:
        Rectangle:
            source: self.icon 
            pos: self.x + self.height * 0.1, self.y + self.height * 0.1
            size: self.height * 0.8, self.height * 0.8
#--------------------- Transparent Button with icon   
<IconButton@ImageButton>:
    icon: ''
    size_hint: None, None
    size: ui.nav_button_y, ui.nav_button_y
    halign: 'right'
    valign: 'middle'
    background_normal: 'data/transparent.png'
    # text_size: self.size
#--------------------- Dropdown list control button       
<DropDownButton@FocusBehavior+ImageButton>:
    size_hint: None, None
    height: ui.nav_button_y
    halign: 'right'
    valign: 'middle'
    background_normal: 'data/black.png'
            
<OptionButton@Button>:
    size_hint: None, None
    height: ui.nav_button_y
    halign: 'center'
    valign: 'middle'
    background_normal: 'data/black.png'
    # width: self.texture_size[0]

<OptionLabel@Label>:
    size_hint: None, None
    height: ui.nav_button_y
