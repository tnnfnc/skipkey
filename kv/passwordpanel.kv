#:kivy 1.11
#---------------------------------------------------------
# Password panel
#---------------------------------------------------------
# --------------------Edit screen > Password preferences tabbed panel
<PasswordPanel>:
    autopanel: _autopanel
    userpanel: _userpanel
    orientation: 'vertical'

    FrameTitle:
        id: _lab_pwdtab
        text: _('Password set')
        size_hint_y: None
        height: self.size_hint_min_y
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: self.minimum_height
        FieldLabel:
            text: _('Label')
            size_hint_x: 0.3
        InputField:
            id: label
            size_hint_y: None
            height: ui.field_y
            hint_text: _('Password')

    # # ScrollView:
    TabbedPanel:
        id: tabs
        tab_pos: 'top_left'
        do_default_tab: False
        on_current_tab: 
            if hasattr(root, 'cmd_current_tab'): getattr(root, 'cmd_current_tab')(self)

        TabbedPanelItem:
            text: _('Auto')
            AutoPanel:
                id: _autopanel
                BoxLayout:
                    orientation: 'horizontal'

        TabbedPanelItem:
            text: _('User')
            UserPanel:
                id: _userpanel
                BoxLayout:
                    orientation: 'horizontal'